        <vertx.version>3.6.3</vertx.version>
        <log4j.version>2.11.1</log4j.version>
        <guava.version>21.0</guava.version>
        <!-- overridden in each project packaged as a fat jar -->
        <main.verticle />
        <!-- maven overrides -->
        <source.skip>true</source.skip>
    </properties>
    <dependencyManagement>
